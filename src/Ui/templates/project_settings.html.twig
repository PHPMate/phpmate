{% extends 'base.html.twig' %}

{% block content %}
    <h1>{% block title %}Project settings{% endblock %}</h1>

    <div class="table-responsive">
        <table class="table table-borderless align-middle">
            <tr>
                <th>Git repository:</th>
                <td>
                    {{ activeProject.remoteGitRepositoryUri }}
                </td>
            </tr>
        </table>
    </div>

    <hr>

    <h2>Build configuration</h2>

    {{ form_start(configure_build_form) }}
        {{ form_widget(configure_build_form) }}

        <input type="submit" name="submit" value="Save" class="btn btn-primary" />
    {{ form_end(configure_build_form) }}

    <hr>

    <h2>Danger zone</h2>

    <div class="card border-danger">
        <div class="card-body">
            <a class="btn btn-sm btn-outline-danger" href="{{ path('delete_project', {projectId: activeProject.projectId}) }}" onclick="return confirm('Are you sure you want to delete this project?');">
                Delete this project
            </a>
        </div>
    </div>

{% endblock %}
