{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block nav_panel %}{% endblock %}

{% block content %}
    <span class="peon-logo"></span>

    <form class="login-form" action="{{ path('login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mb-4">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
        </div>
        <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="_password">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-primary">Log in</button>
    </form>

    <p class="closed-beta-info">Save time (time is money&hellip;) to dev teams. Boost developer&apos;s effectivity and productivity.</p>

    <p class="closed-beta-info">Peon is currently in closed beta.<br>For invitation please contact <a href="mailto:jan@peon.dev">jan@peon.dev</a>.</p>
    <p class="closed-beta-info">We are fully <a href="https://github.com/peon-dev/peon" target="_blank">open-sourced</a>, give it a try!</p>
{% endblock %}


