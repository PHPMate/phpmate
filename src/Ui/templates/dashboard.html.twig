{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <h2>Projects</h2>

    <p>
        <a href="{{ path('create_project') }}" class="btn btn-sm btn-primary ">New project</a>
    </p>

    <div class="dashboard-projects">
        {% for project in projects %}
            <a href="{{ path('project_detail', {projectId: project.projectId}) }}" class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><i class="fab fa-gitlab"></i> {{ project.name }}</h5>
                    <p class="card-text">
                        4 tasks<br>
                        4 jobs
                    </p>
                </div>
            </a>
        {% endfor %}
    </div>

    <h3>Recent jobs</h3>

    {% if jobs is empty %}
        <p>No jobs executed yet.</p>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Task</th>
                        <th>Project</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>
                                {% if job.pending %}
                                    <span class="btn btn-sm">
                                        Pending <span class="spinner-border text-warning spinner-border-sm" style="border-width: .1em" role="status"></span>
                                    </span>
                                {% endif %}

                                {% if job.inProgress %}
                                    <a class="btn btn-primary btn-sm" href="{{ path('job_detail', {jobId: job.jobId}) }}">
                                        In progress <span class="spinner-border text-primary spinner-border-sm" style="border-width: .1em" role="status"></span>
                                    </a>
                                {% endif %}

                                {% if job.succeededAt %}
                                    <a href="{{ path('job_detail', {jobId: job.jobId}) }}" class="btn btn-success btn-sm">
                                        Succeeded
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                        </svg>
                                    </a>
                                {% endif %}

                                {% if job.failed %}
                                    <a href="{{ path('job_detail', {jobId: job.jobId}) }}" class="btn btn-danger btn-sm">
                                        Failed
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill text-danger" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                        </svg>
                                    </a>
                                {% endif %}
                            </td>

                            <td>
                                <a href="{{ path('job_detail', {jobId: job.jobId}) }}">
                                    {{ job.taskName }}
                                </a>
                            </td>

                            <td>
                                <a href="#">
                                    <i class="fab fa-gitlab"></i> {{ job.projectName }}
                                </a>
                            </td>

                            <td>
                                {% if job.succeeded %}
                                    {{ job.succeededAt|date('j. n. H:i') }}
                                {% elseif job.failed %}
                                    {{ job.failedAt|date('j. n. H:i') }}
                                {% elseif job.inProgress %}
                                    {{ job.startedAt|date('j. n. H:i') }}
                                {% endif %}
                                <br>
                                {% if job.executionTime %}
                                    <small class="text-muted">
                                        {% if job.executionTime >= 60 %}
                                            {$job->executionTime / 60|floor}m
                                        {% endif %}
                                        {{ job.executionTime % 60|round }}s
                                    </small>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}
