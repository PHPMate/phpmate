<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="PHPMate\Domain\Project\Project">
        <id name="projectId" type="project_id" />
        <field name="name" />
        <field name="enabledRecipes" type="recipe_names_array">
            <options>
                <option name="default">{}</option>
            </options>
        </field>
        <field name="baselines" type="recipe_baselines_array">
            <options>
                <option name="default">[]</option>
            </options>
        </field>
        <embedded name="remoteGitRepository" class="PHPMate\Domain\GitProvider\Value\RemoteGitRepository" />
    </entity>
</doctrine-mapping>
