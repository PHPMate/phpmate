<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="PHPMate\Domain\Job\Job">
        <id name="jobId" type="job_id" />
        <field name="projectId" type="project_id" />
        <field name="taskId" type="task_id" nullable="true" />
        <field name="title" />
        <field name="recipeName" nullable="true" />
        <field name="scheduledAt" type="datetime_immutable" />
        <field name="startedAt" type="datetime_immutable" nullable="true" />
        <field name="succeededAt" type="datetime_immutable" nullable="true" />
        <field name="failedAt" type="datetime_immutable" nullable="true" />
        <field name="commands" type="json" />
        <embedded name="mergeRequest" class="PHPMate\Domain\GitProvider\Value\MergeRequest" />
        <one-to-many field="processes" target-entity="PHPMate\Domain\Job\JobProcessResult" mapped-by="job">
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
